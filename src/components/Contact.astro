---
import data from '../data/site.json';

const { socials, resume } = data;
---

<section id='contact'>
  <div class='container'>
    <div class='section-header'>
      <h2>contact</h2>
      <div class='section-description'>
        <p>let's connect and build something amazing together</p>
      </div>
    </div>

    <div class='contact-content'>
      <div class='contact-main'>
        <div class='contact-text'>
          <p>currently open to new opportunities and interesting projects</p>
        </div>
        
        <div class='contact-actions'>
          <a href='mailto:richard@rrapstine.me' class='contact-btn primary'>
            <svg width='20' height='20' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2'>
              <path d='M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z'/>
              <polyline points='22,6 12,13 2,6'/>
            </svg>
            <span>get in touch</span>
          </a>
          
          <a href={resume} target='_blank' class='contact-btn secondary'>
            <svg width='20' height='20' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2'>
              <path d='M21 15v4a2 2 0 01-2 2H5a2 2 0 01-2-2v-4M17 8l-5-5-5 5M12 3v12'/>
            </svg>
            <span>download resume</span>
          </a>
        </div>
      </div>

      <div class='social-links'>
        <div class='social-header'>
          <span>find me on</span>
        </div>
        <div class='social-list'>
          {socials.map((social) => (
            <a href={social.link} target='_blank' class='social-link' title={social.title}>
              <span class='social-name'>{social.title.toLowerCase()}</span>
              <svg width='16' height='16' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2'>
                <path d='M7 17L17 7M17 7H7M17 7V17'/>
              </svg>
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style lang='scss'>
  #contact {
    padding: var(--space-20) var(--space-4);
  }

  .section-header {
    margin-bottom: var(--space-16);
    text-align: left;

    h2 {
      font-size: var(--font-size-4xl);
      font-weight: var(--font-weight-bold);
      color: var(--color-text-primary);
      margin-bottom: var(--space-4);
      display: inline-block;
      padding-bottom: var(--space-3);
      position: relative;
    }

    .section-description {
      p {
        font-size: var(--font-size-lg);
        color: var(--color-text-secondary);
        max-width: 600px;
      }
    }
  }

  .contact-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-16);
  }

  .contact-main {
    .contact-text {
      margin-bottom: var(--space-8);

      p {
        font-size: var(--font-size-xl);
        color: var(--color-text-secondary);
        margin: 0;
      }
    }

    .contact-actions {
      display: flex;
      gap: var(--space-4);
      flex-wrap: wrap;
    }

    .contact-btn {
      display: inline-flex;
      align-items: center;
      gap: var(--space-3);
      padding: var(--space-4) var(--space-6);
      border-radius: var(--radius-lg);
      text-decoration: none;
      font-weight: var(--font-weight-medium);
      transition: all var(--transition-fast);
      border: 1px solid var(--color-border);

      &.primary {
        background: var(--color-accent-primary);
        color: var(--color-text-primary);
        border-color: var(--color-accent-primary);

        &:hover {
          background: var(--color-accent-secondary);
          border-color: var(--color-accent-secondary);
          transform: translateY(-2px);
        }
      }

      &.secondary {
        background: var(--color-bg-card);
        color: var(--color-text-secondary);

        &:hover {
          background: rgba(83, 22, 156, 0.1); /* Darker Mauve with transparency */
          color: var(--color-text-primary);
          border-color: var(--color-accent-primary);
          transform: translateY(-1px);
        }
      }

      &::after {
        display: none;
      }

      svg {
        transition: transform var(--transition-fast);
      }

      &:hover svg {
        transform: scale(1.1);
      }
    }
  }

  .social-links {
    .social-header {
      margin-bottom: var(--space-4);

      span {
        font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
        font-size: var(--font-size-sm);
        color: var(--color-text-muted);
        text-transform: uppercase;
        letter-spacing: 0.05em;
      }
    }

    .social-list {
      display: flex;
      flex-direction: column;
      gap: var(--space-2);
    }

    .social-link {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: var(--space-3) var(--space-4);
      color: var(--color-text-secondary);
      text-decoration: none;
      border-radius: var(--radius-md);
      transition: all var(--transition-fast);
      border: 1px solid transparent;

      &:hover {
        background: rgba(83, 22, 156, 0.1); /* Darker Mauve with transparency */
        color: var(--color-text-primary);
        border-color: var(--color-accent-primary);

        svg {
          transform: translate(2px, -2px);
        }
      }

      &::after {
        display: none;
      }

      .social-name {
        font-size: var(--font-size-sm);
        font-weight: var(--font-weight-medium);
      }

      svg {
        transition: transform var(--transition-fast);
        opacity: 0.5;
      }

      &:hover svg {
        opacity: 1;
      }
    }
  }

  @media (min-width: 768px) {
    .contact-content {
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-start;
    }

    .contact-main {
      flex: 2;
      max-width: 500px;
    }

    .social-links {
      flex: 1;
      max-width: 300px;
    }
  }
</style>
</section>
