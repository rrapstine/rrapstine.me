---
import data from '../data/site.json';
import SkillIcon from './SkillIcon.astro';

const { socials, resume } = data;
---

<section id='contact'>
  <h2>Let's Get In Touch</h2>

  <div class='container'>
    <div class='contact'>
      <h3>Check out my resume</h3>
      <a href={resume} target='_blank' class='resume-btn' aria-label='Download resume'>
        <i class='devicon-file-pdf-plain'></i>
        Download Resume
      </a>
    </div>
    <div class='contact'>
      <h3>Find me on social media</h3>
      <ul role='list' class='socials-list'>
        {
          socials.map((social) => (
            <li>
              <a href={social.link} target='_blank' aria-label={`Visit ${social.title}`}>
                <SkillIcon
                  icon={social.icon}
                  colored='true'
                  size='1.5'
                />
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>

<style lang='scss'>
  #contact {
    padding: var(--space-20) var(--space-4);

    h2 {
      text-align: center;
      margin-bottom: var(--space-16);
      background: var(--color-accent-gradient);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: var(--space-12);
      max-width: 800px;
      margin: 0 auto;

      .contact {
        background: var(--color-bg-card);
        border: 1px solid var(--color-border);
        border-radius: var(--radius-2xl);
        padding: var(--space-8);
        backdrop-filter: blur(10px);

        h3 {
          margin-bottom: var(--space-6);
          color: var(--color-text-primary);
          font-size: var(--font-size-lg);
          font-weight: var(--font-weight-semibold);
          text-align: center;
        }

        .resume-btn {
          display: flex;
          align-items: center;
          justify-content: center;
          gap: var(--space-2);
          padding: var(--space-4) var(--space-8);
          background: var(--color-accent-gradient);
          color: var(--color-text-primary);
          border: none;
          border-radius: var(--radius-lg);
          font-size: var(--font-size-base);
          font-weight: var(--font-weight-medium);
          cursor: pointer;
          transition: all var(--transition-fast);
          text-decoration: none;
          margin: 0 auto;
          width: fit-content;

          &:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-xl);
          }

          i {
            font-size: var(--font-size-lg);
          }
        }

        .socials-list {
          display: flex;
          flex-wrap: wrap;
          justify-content: center;
          gap: var(--space-4);

          li {
            transition: all var(--transition-fast);

            a {
              display: inline-flex;
              align-items: center;
              justify-content: center;
              width: 56px;
              height: 56px;
              background: var(--color-bg-tertiary);
              border: 1px solid var(--color-border);
              border-radius: var(--radius-xl);
              color: var(--color-text-secondary);
              transition: all var(--transition-fast);

              &:hover {
                background: var(--color-accent-primary);
                border-color: var(--color-accent-primary);
                color: var(--color-text-primary);
                transform: translateY(-2px) scale(1.05);
                box-shadow: var(--shadow-lg);
              }
            }
          }
        }
      }
    }
  }
</style>
</section>
