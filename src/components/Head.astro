---
import data from '../data/site.json';
import '../styles/globals.scss';
import '../styles/reset.css';

const { title, description } = data;

// Define font URLs - only defined once to avoid duplication
const fontUrls = {
  combined: 'https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&family=Playfair+Display:wght@400;700&display=swap'
};

// No landing image preload needed
---

<head>
  <meta charset='UTF-8' />
  <meta name='viewport' content='width=device-width, initial-scale=1.0' />
  <meta name='generator' content={Astro.generator} />
  <meta name='description' content={description} />
  <meta name='robots' content='index, follow' />
  <link rel='icon' type='image/svg+xml' href='/favicon.svg' />

  <title>{title}</title>

  <!-- Resource preconnect hints -->
  <link rel='preconnect' href='https://fonts.googleapis.com' />
  <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
  
  <!-- No hero image preload needed -->
  
  <!-- Font stylesheet - loaded with proper attributes -->
  <link
    href={fontUrls.combined}
    rel='stylesheet'
    fetchpriority="high"
  />
</head>
