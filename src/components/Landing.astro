<style lang='scss'>
  #landing {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;

    &::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: url(/assets/images/landing-image.webp);
      background-size: cover;
      background-position: center;
      background-attachment: fixed;
      z-index: -2;
    }

    &::after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(
        135deg,
        rgba(10, 10, 15, 0.95) 0%,
        rgba(10, 10, 15, 0.85) 50%,
        rgba(10, 10, 15, 0.95) 100%
      );
      backdrop-filter: blur(1px);
      z-index: -1;
    }

    .container {
      max-width: 800px;
      text-align: center;
      z-index: 1;

      h1 {
        font-size: clamp(var(--font-size-4xl), 8vw, var(--font-size-6xl));
        font-weight: var(--font-weight-bold);
        background: var(--color-accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: var(--space-6);
        line-height: 1.1;
        letter-spacing: -0.02em;
      }

      p {
        font-size: var(--font-size-xl);
        font-weight: var(--font-weight-light);
        color: var(--color-text-secondary);
        margin-bottom: var(--space-8);
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;

        span {
          color: var(--color-accent-primary);
          font-weight: var(--font-weight-medium);
        }
      }
    }

    /* Shimmering stars above mountaintops */
    .stars {
      position: absolute;
      top: 15vh; /* Start lower, above mountaintops */
      left: 0;
      right: 0;
      height: 25vh; /* Extended area for more stars */
      pointer-events: none;
      z-index: 0;
      overflow: hidden;
    }

    .star {
      position: absolute;
      width: 2px;
      height: 2px;
      background: #ffffff;
      border-radius: 50%;
      animation: shimmer 3s ease-in-out infinite;
    }

    .star::before {
      content: '';
      position: absolute;
      top: -1px;
      left: -1px;
      right: -1px;
      bottom: -1px;
      background: radial-gradient(circle, rgba(255, 255, 255, 0.8) 0%, transparent 70%);
      border-radius: 50%;
      animation: twinkle 2s ease-in-out infinite;
    }

    /* Position stars above mountaintops */
    .star-1 { top: 15%; left: 20%; animation-delay: 0s; }
    .star-2 { top: 25%; left: 45%; animation-delay: 0.5s; }
    .star-3 { top: 10%; left: 70%; animation-delay: 1s; }
    .star-4 { top: 35%; left: 15%; animation-delay: 1.5s; }
    .star-5 { top: 20%; left: 85%; animation-delay: 2s; }
    .star-6 { top: 5%; left: 35%; animation-delay: 2.5s; }
    .star-7 { top: 30%; left: 60%; animation-delay: 0.8s; }
    .star-8 { top: 18%; left: 90%; animation-delay: 1.2s; }
    .star-9 { top: 60%; left: 25%; animation-delay: 1.8s; }
    .star-10 { top: 55%; left: 75%; animation-delay: 2.3s; }
    .star-11 { top: 65%; left: 40%; animation-delay: 0.3s; }
    .star-12 { top: 58%; left: 55%; animation-delay: 1.7s; }

    /* Different sizes for variety */
    .star-1, .star-3, .star-6, .star-9 { width: 3px; height: 3px; }
    .star-2, .star-5, .star-8, .star-11 { width: 1.5px; height: 1.5px; }
    .star-4, .star-7, .star-10, .star-12 { width: 2.5px; height: 2.5px; }

    @keyframes shimmer {
      0%, 100% {
        opacity: 0.3;
        transform: scale(1);
      }
      50% {
        opacity: 1;
        transform: scale(1.2);
      }
    }

    @keyframes twinkle {
      0%, 100% {
        opacity: 0;
        transform: scale(0.5);
      }
      50% {
        opacity: 0.6;
        transform: scale(1.5);
      }
    }

    @media (max-width: 768px) {
      .stars {
        height: 25vh; /* Reduce height on mobile */
      }

      .star {
        width: 1.5px;
        height: 1.5px;
      }

      .star-1, .star-3, .star-6 {
        width: 2px;
        height: 2px;
      }
    }
  }
</style>
