---
import siteData from '../data/site.json';
---

<section id='landing'>
  <div class='container'>
    <div class='hero-content'>
      <div class='greeting'>
        <h1>hey, i'm <span class='name'>richard rapstine</span></h1>
        <div class='tagline'>
          <span class='bracket'>[</span>
          <span class='roles'>
            <span class='role active'>father</span>
            <span class='role'>adventurer</span>
            <span class='role'>developer</span>
          </span>
          <span class='bracket'>]</span>
        </div>
      </div>

      <div class='description'>
        <p>
          full stack developer crafting modern web experiences.
          passionate about clean code and elegant solutions.
        </p>
      </div>

      <div class='cta-buttons'>
        <a href='#projects' class='btn-primary'>check out my projects</a>
        <a href={siteData.resume} target='_blank' class='btn-secondary'>
          <span>resume</span>
          <svg width='16' height='16' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2'>
            <path d='M7 17L17 7M17 7H7M17 7V17'/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>



<style lang='scss'>
  #landing {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;

    .container {
      max-width: 800px;
      width: 100%;
    }

    .hero-content {
      text-align: left;
    }

    .greeting {
      margin-bottom: var(--space-8);

      h1 {
        font-size: clamp(2rem, 5vw, 3.5rem);
        font-weight: var(--font-weight-regular);
        color: var(--color-text-secondary);
        margin-bottom: var(--space-4);
        line-height: 1.2;

        .name {
          color: var(--color-text-primary);
          font-weight: var(--font-weight-medium);
        }
      }

      .tagline {
        font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
        font-size: var(--font-size-lg);
        color: var(--color-text-muted);
        display: flex;
        align-items: center;
        gap: var(--space-2);

        .bracket {
          color: var(--color-accent-primary);
          font-weight: var(--font-weight-bold);
        }

        .roles {
          position: relative;
          display: inline-block;
          min-width: 120px;
        }

        .role {
          position: absolute;
          top: -12px;
          left: 0;
          opacity: 0;
          transition: opacity 0.5s ease-in-out;
          color: var(--color-text-primary);

          &.active {
            opacity: 1;
          }
        }
      }
    }

    .description {
      margin-bottom: var(--space-12);

      p {
        font-size: var(--font-size-xl);
        color: var(--color-text-secondary);
        line-height: 1.6;
        max-width: 600px;
      }
    }

    .cta-buttons {
      display: flex;
      gap: var(--space-4);
      align-items: center;
      flex-wrap: wrap;

      .btn-primary {
        background: var(--color-bg-card);
        border: 1px solid var(--color-border);
        color: var(--color-text-primary);
        padding: var(--space-3) var(--space-6);
        border-radius: var(--radius-lg);
        text-decoration: none;
        font-weight: var(--font-weight-medium);
        transition: all var(--transition-fast);
        display: inline-flex;
        align-items: center;

        &:hover {
          background: var(--color-accent-primary);
          border-color: var(--color-accent-primary);
          transform: translateY(-1px);
        }

        &::after {
          display: none;
        }
      }

      .btn-secondary {
        color: var(--color-text-secondary);
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: var(--space-2);
        padding: var(--space-3) var(--space-4);
        border-radius: var(--radius-lg);
        transition: all var(--transition-fast);

        &:hover {
          color: var(--color-text-primary);
          background: var(--color-bg-card);

          svg {
            transform: translate(2px, -2px);
          }
        }

        &::after {
          display: none;
        }

        svg {
          transition: transform var(--transition-fast);
        }
      }
    }

    @media (max-width: 768px) {
      .hero-content {
        text-align: center;
      }

      .greeting {
        h1 {
          font-size: clamp(1.5rem, 8vw, 2.5rem);
        }

        .tagline {
          justify-content: center;
          font-size: var(--font-size-base);
        }
      }

      .description p {
        font-size: var(--font-size-lg);
      }

      .cta-buttons {
        justify-content: center;
      }
    }
  }
</style>

<script>
  const roles = ['father', 'adventurer', 'developer'];
  let currentRole = 0;

  function rotateRoles() {
    const roleElements = document.querySelectorAll('.role');

    if (roleElements.length > 0) {
      roleElements.forEach(el => el.classList.remove('active'));

      currentRole = (currentRole + 1) % roles.length;
      const currentElement = document.querySelector(`.role:nth-child(${currentRole + 1})`);
      if (currentElement) {
        currentElement.classList.add('active');
      }
    }
  }

  setInterval(rotateRoles, 2000);
</script>
