---
import data from '../data/site.json';
import SkillItem from './SkillItem.astro';

const { skills } = data;
---

<section id='skills'>
  <h2 class='ff-heading fs-heading fw-bold text-accent'>My Skillset</h2>

  <div class='container'>
    <div id='comfortable' class='category-wrapper'>
      <h3 class='fs-subheading fw-medium'>Tech I'm comfortable with</h3>
      <ul role='list' class='skills-container'>
        <>
          {skills.comfortable.map((skill) => <SkillItem skill={skill} />)}
        </>
      </ul>
    </div>
    <div id='mastering' class='category-wrapper'>
      <h3 class='fs-subheading fw-medium'>Tech I'm currently mastering</h3>
      <ul role='list' class='skills-container'>
        <>
          {skills.mastering.map((skill) => <SkillItem skill={skill} />)}
        </>
      </ul>
    </div>
  </div>
</section>

<style lang='scss'>
  #skills {
    padding: var(--space-20) var(--space-4);

    h2 {
      text-align: center;
      margin-bottom: var(--space-16);
      background: var(--color-accent-gradient);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .category-wrapper {
      margin-bottom: var(--space-16);

      &:last-of-type {
        margin-bottom: 0;
      }

      h3 {
        text-align: center;
        margin-bottom: var(--space-8);
        color: var(--color-text-secondary);
        font-size: var(--font-size-lg);
        font-weight: var(--font-weight-medium);
      }
    }

    .skills-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
      gap: var(--space-4);
      max-width: 800px;
      margin: 0 auto;
    }
  }
</style>
