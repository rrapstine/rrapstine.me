---
import data from '../data/site.json';
import SkillItem from './SkillItem.astro';

const { skills } = data;
---

<section id='skills'>
  <div class='container'>
    <div class='section-header'>
      <h2>skills</h2>
      <div class='section-description'>
        <p>technologies i work with daily and others i'm actively learning</p>
      </div>
    </div>

    <div class='skills-content'>
      <div class='skill-category'>
        <div class='category-header'>
          <h3>comfortable</h3>
          <span class='category-count'>{skills.comfortable.length}</span>
        </div>
        <ul role='list' class='skills-grid'>
          {skills.comfortable.map((skill) => <SkillItem skill={skill} />)}
        </ul>
      </div>

      <div class='skill-category'>
        <div class='category-header'>
          <h3>learning</h3>
          <span class='category-count'>{skills.mastering.length}</span>
        </div>
        <ul role='list' class='skills-grid'>
          {skills.mastering.map((skill) => <SkillItem skill={skill} />)}
        </ul>
      </div>
    </div>
  </div>
</section>

<style lang='scss'>
  #skills {
    padding: var(--space-20) var(--space-4);
  }

  .section-header {
    margin-bottom: var(--space-16);

    h2 {
      font-size: var(--font-size-4xl);
      font-weight: var(--font-weight-bold);
      color: var(--color-text-primary);
      margin-bottom: var(--space-4);
    }

    .section-description {
      p {
        font-size: var(--font-size-lg);
        color: var(--color-text-secondary);
        max-width: 600px;
      }
    }
  }

  .skills-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-16);
  }

  .skill-category {
    .category-header {
      display: flex;
      align-items: center;
      gap: var(--space-3);
      margin-bottom: var(--space-8);

      h3 {
        font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
        font-size: var(--font-size-xl);
        font-weight: var(--font-weight-medium);
        color: var(--color-text-primary);
        margin: 0;
      }

      .category-count {
        background: var(--color-bg-card);
        color: var(--color-text-muted);
        font-size: var(--font-size-sm);
        padding: var(--space-1) var(--space-3);
        border-radius: var(--radius-md);
        border: 1px solid var(--color-border);
      }
    }

    .skills-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
      gap: var(--space-3);
      list-style: none;
      margin: 0;
      padding: 0;
    }
  }

  @media (min-width: 768px) {
    .skills-content {
      flex-direction: row;
      gap: var(--space-20);
    }

    .skill-category {
      flex: 1;
    }

    .skills-grid {
      grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
    }
  }
</style>
